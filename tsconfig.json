{
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": [
      "dom",
      "es6",
      "es7"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "paths": {
      "@@components/*": [
        "src/universal/components/*"
      ],
      "@@src/*": [
        "src/*"
      ],
    },
    "strictNullChecks": true,
    "target": "es6"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*/__temp"
  ]
}
